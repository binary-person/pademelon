{
    "name": "pademelon",
    "version": "0.0.0",
    "description": "client request rewriting library for nodejs and the browser",
    "main": "lib/nodejs-module.js",
    "scripts": {
        "test": "npm run build && npm run jesttest && npm run lint && prettier --check 'src/**/*.ts' && echo 'All tests pass!'",
        "jesttest": "jest --config jestconfig.json --runInBand",
        "builddoc": "typedoc src/nodejs-module.ts src/browser-module.ts",
        "build": "rm -rf lib/* && tsc && webpack-cli",
        "prepack": "npm test && tsc --project tsconfig.prod.json && webpack-cli --mode='production'",
        "demotest": "npm run build && node lib/demo-server.js",
        "dev-server": "concurrently 'webpack-cli --watch' 'tsc --watch' 'nodemon --watch lib lib/demo-server.js'",
        "format": "prettier --write 'src/**/*.ts'",
        "lint": "tslint -p tsconfig.json"
    },
    "keywords": [],
    "author": "Simon Cheng <simoncheng559@gmail.com> (https://github.com/binary-person)",
    "license": "Apache-2.0",
    "dependencies": {
        "node-html-parser": "^2.1.0",
        "srcset": "^3.0.0",
        "stream-to-string": "^1.2.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.20",
        "@types/jsdom": "^16.2.6",
        "@types/node": "^14.14.22",
        "concurrently": "^5.3.0",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "ts-jest": "^26.4.4",
        "ts-loader": "^8.0.14",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typedoc": "^0.20.18",
        "typescript": "^4.1.3",
        "webpack": "^5.17.0",
        "webpack-cli": "^4.4.0"
    },
    "files": [
        "lib/**/*",
        "dist/**/*"
    ]
}